{
  "name": "pnl-streaming-backend",
  "version": "1.0.0",
  "description": "Real-time P&L streaming backend with Socket.io and SSE fallback",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest __tests__/unit/ --verbose",
    "test:integration": "jest __tests__/integration/ --verbose",
    "test:performance": "jest __tests__/performance/ --verbose --testTimeout=30000",
    "test:all": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "redis": "^4.6.5",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.0.3",
    "axios": "^1.3.4",
    "winston": "^3.8.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "helmet": "^7.0.0",
    "uuid": "^9.0.0",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "@testing-library/jest-dom": "^5.16.5",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "babel-jest": "^29.5.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
