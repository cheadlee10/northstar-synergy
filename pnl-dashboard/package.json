{
  "name": "northstar-pnl-dashboard",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time P&L Dashboard for NorthStar Synergy",
  "main": "main.jsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx",
    "test": "jest",
    "test:unit": "jest __tests__/unit/ --verbose",
    "test:accessibility": "jest __tests__/unit/accessibility.test.jsx --verbose",
    "test:snapshots": "jest __tests__/unit/charts.snapshot.test.jsx --verbose",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "jest --coverage && cypress run",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2 && cypress run",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "@ant-design/charts": "^1.4.34",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.31",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.4.11",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.5.0",
    "cypress": "^13.0.0",
    "jest-junit": "^16.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-watch-typeahead": "^2.2.2"
  }
}
